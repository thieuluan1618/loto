# Azure Deployment Configuration
# Copy to .env.azure and fill in your values

# Azure Resource Group and Location
RESOURCE_GROUP=loto-rg
LOCATION=eastus

# Azure Container Registry (must be unique, lowercase, no hyphens)
REGISTRY_NAME=lotoregistry

# Azure App Service (Web App name, must be globally unique)
APP_SERVICE_NAME=loto-app

# Docker image details
IMAGE_NAME=loto-server
IMAGE_TAG=latest

# (Optional) GitHub integration
GITHUB_REPO=your-org/loto
GITHUB_BRANCH=main

# (Optional) Database
DATABASE_SUBSCRIPTION_ID=your-subscription-id
DATABASE_RESOURCE_GROUP=loto-rg
DATABASE_SERVER=loto-db-server
DATABASE_NAME=loto

# (Optional) Key Vault for secrets
KEYVAULT_NAME=loto-kv
